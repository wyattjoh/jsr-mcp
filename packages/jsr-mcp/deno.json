{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@wyattjoh/jsr-mcp",
  "version": "1.0.0",
  "license": "MIT",
  "exports": "./mod.ts",
  "publish": {
    "include": ["LICENSE", "README.md", "mod.ts", "src/**/*.ts", "deno.json"]
  },
  "tasks": {
    "build": "deno compile --allow-read --allow-write --allow-env --allow-run --allow-net --output=jsr-mcp mod.ts"
  },
  "imports": {
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "zod": "npm:zod@^3.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wyattjoh/jsr-mcp.git"
  }
}
